<% layout("/layouts/boilerplate") %>

 
    <div class="row">
      <div class="col-8 offset-2">


        <h1 class="mt-3">Create a New Listing</h1>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

          <div class="mb-4 mt-2">
            <label for="title" class="form-label fs-5">Title</label>
            <input name="listing[title]" placeholder="Enter a catchy title" type="text" class="form-control" required />

            <div class="valid-feedback">
              Looks good!
            </div>

            <div class="invalid-feedback">
              Please Enter a Title!
            </div>
          </div>

          <div class="mb-4">
            <label for="description" class="form-label fs-5">Description</label>
            <textarea name="listing[description]" class="form-control" placeholder="Enter some description" rows="3" maxlength="600"
              required></textarea>


            <div class="valid-feedback">
              Looks good!
            </div>

            <div class="invalid-feedback">
              Please enter a short description!
            </div>
          </div>

        
          <div class="mb-4">
            <label for="image" class="form-label fs-5">Upload Listing Image</label>
            <input name="listing[image][url]"  
            type="file" class="form-control"  />
          </div>
          

          <div class="mb-4">
            <label for="price" class="form-label fs-5">Price</label>
            <input name="listing[price]" placeholder="Enter price" type="number"  min="0" class="form-control" required />

            <div class="valid-feedback">
              Looks good!
            </div>

            <div class="invalid-feedback">
              Price should be valid!
            </div>

          </div>

          <div class="mb-4">
            <label for="country" class="form-label fs-5">Country</label>
            <input name="listing[country]" placeholder="Enter country" type="text"   class="form-control" required />

            <div class="valid-feedback">
              Looks good!
            </div>

            <div class="invalid-feedback">
              Country should be valid!
            </div>
          </div>


          <div class="mb-4">
            <label for="location" class="form-label fs-5">Location</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required />

            <div class="valid-feedback">
              Looks good!
            </div>

            <div class="invalid-feedback">
              Location should be valid!
            </div>
          </div>
          <button class="btn btn-dark mb-3 add-btn ">Add</button>
        </form>


      </div>
    </div>

