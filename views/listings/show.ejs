<% layout("/layouts/boilerplate") %>

    <div class="row">
      <div class="col-8 offset-3 mt-3 mb-3">
        <h3>
          <b>Listing Detail:</b><br>

        </h3>
      </div>
      <div class="card col-6 offset-3  show-card mb-3 listing-card">
        <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="listing_image">
        <div class="card-body ms-3">
          <p class="card-text mt-3 ">
          <h5> <b>
              <%= listing.title %>
            </b><br></h5>
          </p>


          <p class="card-text mt-3 ">Owned by &nbsp<%= listing.owner.username %>          </p>
            
          <p class="card-text mt-3 "> <%= listing.description %><br></p>
            <p class="card-text mt-3 "> Price:&nbsp&#8377;&nbsp <%= listing.price.toLocaleString("en-IN") %><br></p>
              <p class="card-text mt-3 "> Location :<%= listing.location %><br></p>
                <p class="card-text mt-3 "> Country: <%= listing.country %><br></p>
                  
        </div>
      </div>


      <br>
      <br>

      <div class="btns  mb-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>


        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark offset-5">Delete</button>
        </form>
      </div>

      <!-- reviews -->
      <hr>
      <h4>Leave a Review</h4>

      <form class="mb-1 mt-1 needs-validation" action="/listings/<%= listing.id %>/reviews" method="POST" novalidate>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="0" max="5" id="rating" name="review[rating]"
            class="form-control form-control-sm w-25 rounded" required />
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comments</div>
        </div>
        <button class="btn btn-outline-dark mb-3">Submit</button>
      </form>

      <!-- all reviews -->
       <div class="reviews-div mb-3">
       <h4> All Reviews</h4>
       


       <div class="row">
      <% for(review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3"> 
          <div class="card-body">
            <h5 class="card-title">Review</h5>
            
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> stars</p>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-sm btn-dark" > Delete </button>
          </form>
          </div>
        </div>
        <%} %>
      </div>

      </div>

    
    </div>
