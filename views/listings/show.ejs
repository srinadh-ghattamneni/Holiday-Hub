<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
      <div class="col-8 offset-3 mt-3 mb-3">
        <h3>
          <%= listing.title %>
        </h3>
      </div>
      <div class="card col-6 offset-3  show-card mb-3">
        <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="listing_image">
        <div class="card-body">
          <p class="card-text mt-3">
            <b>Listing Detail:</b><br>
            <%= listing.description %><br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                <%= listing.location %><br>
                  <%= listing.country %><br>
          </p>
        </div>
      </div>


      <br>
      <br>

      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>


        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark offset-5">Delete</button>
        </form>
      </div>



    </div>
  </body>